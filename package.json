{
  "name": "@testfalp/template-module-nodejs",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "license": "UNLICENSED",
  "scripts": {
    "publish:lib": "ts-node scripts/exec-in-lib.ts",
    "get:version": "ts-node scripts/update-version.ts",
    "set:registry": "dotenv -e .env npm config set $REGISTRY_SCOPE:registry=$REGISTRY_URL",
    "prebuild": "rimraf dist",
    "build": "nest build && cp package.json dist/",
    "build:lib": "dotenv -- cross-env \"rimraf dist && nest build libs/%npm_config_name%/tsconfig.lib.json\"",
    "build:mod": "dotenv -- cross-env \"npm run convert:mod --name=%npm_config_name% && npm run build:lib --name=%npm_config_name%\"",
    "convert:mod": "ts-node utils/convertModule.ts %npm_config_name%",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "format": "prettier --list-different .",
    "format:fix": "prettier \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "cm:init": "npx commitizen init cz-conventional-changelog --save-dev --save-exact",
    "cm": "cz",
    "cm:custom": "node ./node_modules/cz-customizable/standalone.js",
    "prepare:husky": "node .husky/install.mjs",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "release": "HUSKY=0 npx semantic-release --no-ci",
    "release:debug": "HUSKY=0 semantic-release --debug"
  },
  "dependencies": {
    "@testfalp/template-module-nodejs": "^1.0.9",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "dotenv": "^16.4.7",
    "example-lib-1": "^1.0.7",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@commitlint/cz-commitlint": "^19.6.1",
    "@eslint/js": "^9.17.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.16",
    "@types/semantic-release": "^20.0.6",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "commitizen": "^4.3.1",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^7.3.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jest": "^29.5.0",
    "lint-staged": "^15.3.0",
    "prettier": "^3.0.0",
    "semantic-release": "^24.2.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.19.1",
    "vitepress": "^1.5.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@jstest/testjsfalp(|/.*)$": "<rootDir>/libs/examplee-lib/src/$1"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JavierSFALP/template-module-nestjs.git"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    },
    "cz-customizable": {
      "config": "config/commitizen/config.js"
    }
  }
}